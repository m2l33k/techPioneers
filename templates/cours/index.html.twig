{% extends 'base.html.twig' %}

{% block title %}Cours index{% endblock %}

{% block body %}
    <h1>Courses</h1>

    <div class="row row-cols-1 row-cols-md-3 g-4"> <!-- Utilisation de "row-cols" pour la responsivité et "g-4" pour espacement entre les cartes -->
        {% for cour in cours %}
            <div class="col mb-4">
                <div class="card" style="height: 100%;"> <!-- Utilisation de "height: 100%" pour uniformiser la taille des cartes -->
                    <!-- Image du cours, statique ici -->
                    <img src="{{ asset('img/cours1.jpg') }}" class="card-img-top" alt="Image du cours" style="object-fit: cover; height: 180px;"> <!-- Ajustement de l'image -->
                    <div class="card-body">
                        <!-- Titre du cours -->
                        <h5 class="card-title" style="font-size: 1.2rem;">{{ cour.TitreCours }}</h5> <!-- Réduction de la taille du titre -->
                        <!-- Description (si nécessaire) -->
                        <p class="card-text" style="font-size: 0.9rem;">{{ cour.DescriptioCours|slice(0, 100) }}...</p> <!-- Réduction de la taille du texte -->
                        <!-- Lien vers les détails du cours -->
                        <a href="{{ path('app_cours_show', {'Id_Cours': cour.IdCours}) }}" class="btn btn-primary">Voir les détails</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>Aucun cours trouvé.</p>
        {% endfor %}
    </div>

    <a href="{{ path('app_cours_new') }}" class="btn btn-success">Créer un nouveau cours</a>
{% endblock %}
