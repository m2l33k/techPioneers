{% extends 'base.html.twig' %}

{% block title %}Panier{% endblock %}

{% block body %}
    <h1>Panier</h1>

    {% if panierItems is empty %}
        <p>Votre panier est vide.</p>
    {% else %}
        <ul>
            {% for item in panierItems %}
                <li>
                    Evenement ID: {{ item }}
                    <a href="{{ path('app_panier_remove', { id: item }) }}">Retirer</a>
                </li>
            {% endfor %}
        </ul>
    {% endif %}
{% endblock %}
