{% extends 'base.html.twig' %}

{% block body %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Chatbot Conversation</title>
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #e0f7fa;
        }
        #chat-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 25px;
            background-color: #ffffff;
            border-radius: 12px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            height: 75vh;
            overflow: hidden;
        }
        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #00796b;
            font-size: 2rem;
        }
        #chat-messages {
            flex: 1;
            overflow-y: auto;
            margin-bottom: 20px;
            padding: 10px;
            background-color: #f1f1f1;
            border-radius: 10px;
            box-sizing: border-box;
        }
        .message {
            padding: 12px;
            margin: 10px 0;
            border-radius: 10px;
            word-wrap: break-word;
            line-height: 1.5;
            display: flex;
            align-items: center;
            max-width: 90%;
            word-break: break-word;
        }
        .user-message {
            background-color: #00796b;
            color: white;
            text-align: right;
            align-self: flex-end;
            border-radius: 12px 12px 0 12px;
            margin-left: auto;
        }
        .bot-message {
            background-color: #e0f2f1;
            color: #00796b;
            text-align: left;
            align-self: flex-start;
            border-radius: 12px 12px 12px 0;
        }
        form {
            display: flex;
            gap: 12px;
            justify-content: center;
            margin-top: 20px;
        }
        input[type="text"] {
            flex: 1;
            padding: 10px 15px;
            border: 1px solid #00796b;
            border-radius: 30px;
            font-size: 1rem;
            outline: none;
            transition: all 0.3s;
        }
        input[type="text"]:focus {
            border-color: #004d40;
        }
        button {
            padding: 12px 20px;
            background-color: #00796b;
            color: white;
            border: none;
            border-radius: 30px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s;
        }
        button:hover {
            background-color: #004d40;
        }
        .bot-typing {
            color: #00796b;
            font-style: italic;
            text-align: center;
            padding: 10px 0;
        }
        @media (max-width: 768px) {
            #chat-container {
                width: 90%;
                padding: 15px;
            }
            input[type="text"] {
                font-size: 0.9rem;
            }
            button {
                font-size: 0.9rem;
            }
        }
    </style>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const form = document.querySelector("form");
            const messagesContainer = document.getElementById("chat-messages");

            form.addEventListener("submit", (event) => {
                const typingIndicator = document.createElement("div");
                typingIndicator.classList.add("bot-typing");
                typingIndicator.textContent = "ðŸ¤– Typing...";
                messagesContainer.appendChild(typingIndicator);
                messagesContainer.scrollTop = messagesContainer.scrollHeight;

                setTimeout(() => {
                    typingIndicator.remove(); // Simulate response arrival
                }, 2000);
            });
        });
    </script>
</head>
<body>

<div id="chat-container">
    <h2>Chat with AI</h2>

    <div id="chat-messages">
        {% for message in messages %}
            <div class="message {% if 'ðŸ‘¤' in message.content %}user-message{% else %}bot-message{% endif %}">
                {{ message.content|raw }}
            </div>
        {% endfor %}
    </div>

    <form method="post">
        <input type="text" name="question" placeholder="Type your message..." required autocomplete="off">
        <button type="submit">Send</button>
    </form>
</div>

</body>
</html>
{% endblock %}
