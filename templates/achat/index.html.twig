{% extends 'base.html.twig' %}

{% block title %}Achat{% endblock %}

{% block body %}
    <h1>Course Achat</h1>

    <form method="GET" action="{{ path('app_achat_index') }}">
        <div>
            <label for="idCours">Enter Course ID to Add:</label>
            <input type="number" id="idCours" name="idCours" required>
            <button type="submit">Add to Cart</button>
        </div>
    </form>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}

    <h2>Cart</h2>
    <ul>
        {% for cours in panier %}
            <li>
                <strong>{{ cours.titre }}</strong> - {{ cours.description }} 
                (Created on: {{ cours.date_creation|date('Y-m-d H:i:s') }})
            </li>
        {% else %}
            <li>Your cart is empty.</li>
        {% endfor %}
    </ul>
{% endblock %}
