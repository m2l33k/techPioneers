{% extends 'base.html.twig' %}

{% block title %}Event Index{% endblock %}

{% block body %}
<div class="index-page">
    <h1 class="text-center">Event Index</h1>

    <table class="table table-hover table-bordered">
        <thead class="table-primary">
            <tr>
                <th>ID</th>
                <th>Title</th>
                <th>Date</th>
                <th>Description</th>
                <th>Organizer</th>
                <th>Link</th>
                <th>Location</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for evenement in evenements %}
            <tr>
                <td>{{ evenement.idEvenement }}</td>
                <td>{{ evenement.titreEvenement }}</td>
                <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ evenement.descriptionEvenement }}</td>
                <td>{{ evenement.organisateurEvenement }}</td>
                <td>
                    <a href="{{ evenement.lienEvenement }}" target="_blank" class="btn btn-link">Visit</a>
                </td>
                <td>{{ evenement.lieuEvenement }}</td>
                <td class="action-buttons">
                    <a href="{{ path('app_evenement_show', {'idEvenement': evenement.idEvenement}) }}" class="btn btn-outline-info btn-sm">Show</a>
                    <a href="{{ path('app_evenement_edit', {'idEvenement': evenement.idEvenement}) }}" class="btn btn-outline-primary btn-sm">Edit</a>
                    {{ include('evenement/_delete_form.html.twig', {'button_class': 'btn btn-outline-danger btn-sm'}) }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8" class="text-center">No records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="{{ path('app_evenement_new') }}" class="btn btn-success">Create New Event</a>
    </div>
</div>
{% endblock %}
