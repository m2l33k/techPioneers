{% extends 'base.html.twig' %}

{% block title %}Event Details{% endblock %}

{% block body %}
<div class="show-page">
    <h1 class="text-center">Event Details</h1>

    <div class="event-details">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ evenement.idEvenement }}</td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>{{ evenement.titreEvenement }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{{ evenement.dateEvenement ? evenement.dateEvenement|date('Y-m-d H:i:s') : '' }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ evenement.descriptionEvenement }}</td>
                </tr>
                <tr>
                    <th>Organizer</th>
                    <td>{{ evenement.organisateurEvenement }}</td>
                </tr>
                <tr>
                    <th>Link</th>
                    <td><a href="{{ evenement.lienEvenement }}" target="_blank" class="btn btn-link">Visit</a></td>
                </tr>
                <tr>
                    <th>Location</th>
                    <td>{{ evenement.lieuEvenement }}</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="action-buttons text-center">
        <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_evenement_edit', {'idEvenement': evenement.idEvenement}) }}" class="btn btn-primary">Edit</a>
        {{ include('evenement/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
    </div>
</div>
{% endblock %}
