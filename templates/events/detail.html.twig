{% extends 'base.html.twig' %}

{% block title %}Créer un Nouveau Evenement{% endblock %}

{% block body %}
<div class="container mt-5">
    <!-- Section des détails de l'événement -->
    <div class="card mb-4">
        <div class="row no-gutters">
            <div class="col-md-4 d-flex align-items-center justify-content-center">
                {% if event.image %}
                <img
                        src="{{ asset('uploads/event/' ~ event.image) }}"
                        class="rounded-circle img-fluid"
                        alt="Image de l'événement"
                        style="width: 200px; height: 200px; object-fit: cover;">
                {% else %}
                    <img
                            src="https://via.placeholder.com/200"
                            class="rounded-circle img-fluid"
                            alt="Image de l'événement"
                            style="width: 200px; height: 200px; object-fit: cover;">


                {% endif %}
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h2 class="card-title">{{ event.EventName }}</h2>
                    <p class="card-text"><strong>Date :</strong> {{ event.EventDate|date('Y-m-d') }}</p>
                    <p class="card-text"><strong>Description :</strong> {{ event.EventDesc }}</p>
                    <p class="card-text"><strong>Lieu :</strong> {{ event.EventPlace }}</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Section des projets liés -->
    <div class="card">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Projets liés</h4>
        </div>
        <div class="card-body">

            <div class="row">
                {% for projets in projet %}
                <!-- Exemple de projet lié -->
                <div class="col-md-4 mb-4">
                    <div class="card h-100">
                        <div class="card-body">
                            <h5 class="card-title">{{ projets.title }}</h5>
                            <p class="card-text">{{projets.projetdesc }}</p>
                        </div>
                        <div class="card-footer text-right">
                            <a href="{{ path('app_project.detail', {'id': projets.id}) }}" class="btn btn-primary btn-sm">
                                Voir détails
                            </a>
                        </div>
                    </div>
                </div>
                {% else %}
                <!-- Répétez pour d'autres projets -->
                   <h3>Aucun Projet Lié trouvé.</h3>
                {% endfor %}
                <!-- Fin exemple -->
            </div>
        </div>
    </div>
</div>
{% endblock %}