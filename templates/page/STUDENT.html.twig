        </div>

        <!-- Card 6: Testimonial -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Testimonial</h5>
                    <p class="card-text">Check Testimonials.</p>
                    <a href="{{ path('app_Testimonial') }}" class="btn btn-primary">View Testimonials</a>
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-4">
        <!-- Card 7: Forum -->
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Panier</h5>
                    <p class="card-text">Consulter Mes Achats</p>
                    <a href="{{ path('app_forum_index') }}" class="btn btn-dark">View Achat</a>
                </div>
            </div>
        </div>

</div>
