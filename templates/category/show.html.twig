{% extends 'base.html.twig' %}

{% block title %}Category Details{% endblock %}

{% block body %}
<div class="show-page">
    <h1 class="text-center">Category Details</h1>

    <div class="details-container">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <th>ID</th>
                    <td>{{ category.idCategory }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ category.nomCategory }}</td>
                </tr>
                <tr>
                    <th>Event ID</th>
                    <td>
                        {% if category.evenement is not null %}
                            {{ category.evenement.idEvenement }}
                        {% else %}
                            No associated event
                        {% endif %}
                    </td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="action-buttons text-center">
        <a href="{{ path('app_category_index') }}" class="btn btn-secondary">Back to List</a>
        <a href="{{ path('app_category_edit', {'idCategory': category.idCategory}) }}" class="btn btn-primary">Edit</a>
        {{ include('category/_delete_form.html.twig', {'button_class': 'btn btn-danger'}) }}
    </div>
</div>
{% endblock %}
