{% extends 'contact.html.twig' %}

{% block title %}Modifier réclamation{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-md-6">
            <img src="{{ asset('images/3447661.png') }}" alt="Description de l'image" style="max-width: 100%; height: auto;">
        </div>
        <div class="col-md-6">
            <h1>Modifier réclamation</h1>
            {{ form_start(form, {'attr': {'class': 'my-custom-form'}}) }}
                <div class="form-group">
                    {{ form_row(form.categorie_reclamation, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.objet_reclamation, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.description_reclamation, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                  <button type="submit" class="btn btn-primary">
    <i class="fas fa-edit"></i> Modifier
</button>

                </div>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}