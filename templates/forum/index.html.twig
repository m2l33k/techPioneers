{% extends 'base.html.twig' %}

{% block title %}Forum{% endblock %}

{% block body %}
<div class="index-page">
    <h1 class="text-center mb-5 text-primary">
        <i class="bi bi-chat-square-dots"></i> Forum
    </h1>

    <!-- Search Form -->
    <form method="GET" action="{{ path('app_forum_index') }}" class="mb-4">
        <div class="input-group">
            <input type="text" name="query" class="form-control" placeholder="Search Forum"
                   value="{{ app.request.query.get('query') }}">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>

    <div class="row">
        {% if forums is not empty %}
            {% for forum in forums %}
                <div class="col-md-4 mb-4">
                    <div class="card shadow-lg rounded-lg border-primary">
                        <div class="card-body">
                            <h5 class="card-title text-dark">{{ forum.titreForum }}</h5>
                            <p class="card-text">{{ forum.descriptionForum }}</p>
                            <p class="card-text"><small class="text-muted">Creator: {{ forum.createurForum.Username }}</small></p>
                        </div>
                        <div class="card-footer text-center">
                            <a href="{{ path('app_forum_show', {'idForum': forum.idForum}) }}" class="btn btn-outline-info btn-sm">
    <i class="bi bi-eye"></i> Show
</a>


                            <a href="{{ path('app_forum_edit', {'idForum': forum.idForum}) }}" class="btn btn-outline-primary btn-sm">
                                <i class="bi bi-pencil"></i> Edit
                            </a>
                            
                            <!-- Delete Button Form -->
                            <form action="{{ path('app_forum_delete', {'idForum': forum.idForum}) }}" method="post" style="display:inline;" onsubmit="return confirm('Are you sure you want to delete this forum?');">
                                <button type="submit" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-12">
                    <div class="alert alert-info text-center">
                        <i class="bi bi-info-circle"></i> No forums found.
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center">
                    <i class="bi bi-search"></i> No results found for your query.
                </div>
            </div>
        {% endif %}
    </div>

    <div class="text-center mt-4">
        <a href="{{ path('app_forum_new') }}" class="btn btn-success btn-lg">
            <i class="bi bi-plus-circle"></i> Create New Forum
        </a>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        /* General page styling */
        .index-page {
            padding: 30px;
            background-color: #f7f7f7;
        }

        /* Title styling */
        h1 {
            font-size: 2.5rem;
            font-weight: bold;
            color: #007bff;
        }

        /* Card hover effect */
        .card:hover {
            transform: scale(1.05);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
            transition: all 0.3s ease-in-out;
        }

        /* Card body hover effect */
        .card-body {
            transition: background-color 0.3s ease-in-out;
        }

        .card:hover .card-body {
            background-color: #f8f9fa;
        }

        /* Button styling */
        .btn-outline-info, .btn-outline-primary, .btn-outline-danger {
            transition: all 0.3s ease-in-out;
        }

        .btn-outline-info:hover {
            background-color: #17a2b8;
            color: white;
        }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
        }

        .btn-outline-danger:hover {
            background-color: #dc3545;
            color: white;
        }

        .btn-success {
            font-size: 1.1rem;
            padding: 12px 30px;
        }

        /* Adjusting input fields and search form */
        .input-group {
            max-width: 600px;
            margin: 0 auto;
        }

        .form-control {
            height: 50px;
        }

        /* Alert and icon styling */
        .alert {
            font-size: 1.1rem;
        }

        .bi {
            margin-right: 8px;
        }
    </style>
{% endblock %}
