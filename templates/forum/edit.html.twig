{% extends 'base.html.twig' %}

{% block title %}Edit Forum{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="text-center mb-4">Edit Forum</h1>

    <div class="card shadow-lg p-4">
        <div class="card-body">
            {{ form_start(form) }}

            <div class="mb-3">
                {{ form_label(form.titreForum, 'Titre Forum', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.titreForum, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.descriptionForum, 'Description Forum', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.descriptionForum, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
            </div>

            <div class="mb-3">
                {{ form_label(form.createurForum, 'Createur Forum', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.createurForum, {'attr': {'class': 'form-control'}}) }}
            </div>

            <div class="form-actions text-center mt-4">
                <button type="submit" class="btn btn-primary">Save</button>
                <a href="{{ path('app_forum_index') }}" class="btn btn-secondary">Back to List</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
