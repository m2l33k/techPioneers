{% extends 'base.html.twig' %}

{% block title %}Ressource index{% endblock %}

{% block body %}
    <h1 class="page-title">Ressources</h1>

    <!-- Formulaire de recherche par nom de cours -->
    
     <form method="get" action="{{ path('app_ressource_index') }}" class="mb-4" style="max-width: 50%; margin: 0 auto;">
        <div class="input-group mb-3">
            <input type="text" class="form-control" placeholder="Search by course title... " name="titreRessource" value="{{ app.request.query.get('titreRessource') }}">
            <button class="btn btn-success"  type="submit">Search</button>
        </div>
    </form>

    <div class="row justify-content-center">
        {% for ressource in ressources %}
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4 d-flex align-items-stretch">
                <div class="card" style="width: 18rem;">
                    <img src="{{ asset('img/ressimg1.jpg') }}" class="card-img-top" alt="Image de la ressource" style="height: 150px; object-fit: cover;">
                    <div class="card-body">
                        <h6 class="card-title text-truncate">{{ ressource.TitreRessource }}</h6>
                        <p class="card-text text-truncate" style="max-width: 100%;">
                            {{ ressource.DescriptionRessource }}
                        </p>
                        <p><strong>Type:</strong> {{ ressource.TypeRessource.value }}</p>
                        <a href="{{ path('app_ressource_show', {'Id_Ressource': ressource.idRessource}) }}" class="btn btn-primary btn-sm">Details</a>
                    </div>
                </div>
            </div>
        {% else %}
            <p>No resources found.</p>
        {% endfor %}
    </div>
{% endblock %}
{% block stylesheets %}
    <style>
        /* Style pour le titre COURSES */
        .page-title {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Police moderne */
            font-size: 3rem; /* Taille plus grande */
            font-weight: 600; /* Gras */
            color: #4CAF50; /* Couleur verte */
            text-align: center; /* Centré */
            text-transform: uppercase; /* En majuscules */
            letter-spacing: 2px; /* Espacement entre les lettres */
            margin-top: 30px; /* Espacement en haut */
            margin-bottom: 30px; /* Espacement en bas */
            border-bottom: 3px solid #4CAF50; /* Ligne en dessous */
            padding-bottom: 10px; /* Espacement entre le texte et la ligne */
            text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1); /* Ombre légère */
        }
    </style>
{% endblock %}
